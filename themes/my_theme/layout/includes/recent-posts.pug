
if page.posts.length > 0
  #recent-posts
    each post,index in page.posts.sort('date', -1).limit(10).toArray()
      .recent-post-item
        h2.post-title
          a(href=config.root + post.path)= post.title
        if post.date
          time(datetime=post.date.toJSON())= date(post.date, date_format)
        if post.tags
          each item in post.tags.data
            .post-tag
              span= item.name
        .excerpt!= post.excerpt?post.excerpt:post.content
