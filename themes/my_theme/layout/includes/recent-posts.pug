
if page.posts.length > 0
  #recent-posts
    each post,index in page.posts.sort('date', -1).limit(10).toArray()
      .recent-post-item
        .page-meta-info
          if post.date
            time(datetime=post.date.toJSON())= date(post.date, date_format)
          if post.tags
            each item in post.tags.data
              a.post-tag(href=config.root + item.path)!=item.name
            else
              span.post-tag!="æ— "
        h1.post-title
          a(href=config.root + post.path)= post.title
        .post-excerpt!= post.excerpt?post.excerpt:post.content
        a.read-more(href=config.root + post.path)!="Read"
